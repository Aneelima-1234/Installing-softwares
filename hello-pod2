  initcontainers:
    - name: nop
      image: alpine
      args: 
        - sleep
        - 30s
    - name: nop2
      image: alpine
      args: 
        - sleep
        - 60s
  containers: 
    - name: maincar
      image: nginx
      resources:
        limits:
          cpu: "500m"
          memory: "128Mi"     
      ports:
        - containerPort: 80
    - name: sidecar
      image: alpine 
      args: 
        - sleep
        - 40s 
      resources:
        limits:
          cpu: "500m"
          memory: "128Mi"   
          